<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projektMauiWPierwszyDzienNiezle.View.Glowna"
             Title="Glowna">
    <StackLayout>
        <StackLayout>
            <Label Text="Ilość Zjedzonych Kalorii : "></Label>
            <Label Text="{Binding caloriesEaten}"></Label>
        </StackLayout>
        <StackLayout>
            <Label Text="Lista Posiłków : "></Label>
        </StackLayout>
        <StackLayout>
            <Label Text="Podaj nazwę posiłku"></Label>
            <Entry Text="{Binding Name}"></Entry>
            <Label Text="Ilość danego Posiłku"></Label>
            <Entry Text="{Binding Servings}"></Entry>
            <Label Text="Podaj ilośc Kalorii (kcal)"></Label>
            <Entry Text="{Binding Kcal}"></Entry>
            <Button Text="Dodaj Posiłek"></Button>
        </StackLayout>
    </StackLayout>
</ContentPage>